    @model IEnumerable<BibliotecaMVC.Models.Prestamo>

<h2>Préstamos Activos</h2>

<div class="mb-3">
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">
        Volver al Home
    </a>

    <a class="btn btn-info" asp-action="Historial">
        Ver Historial de Préstamos
    </a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Libro</th>
            <th>Solicitante</th>
            <th>Fecha Préstamo</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Libro.Titulo</td>
                <td>@p.NombreSolicitante</td>
                <td>@p.FechaPrestamo.ToShortDateString()</td>
                <td>
                    <button class="btn btn-success btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#modalDevolver"
                            data-id="@p.PrestamoID"
                            data-libro="@p.Libro.Titulo">
                        Devolver
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="modal fade" id="modalDevolver" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <form action="@Url.Action("Devolver", "Prestamos")" method="post">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title">Confirmar devolución</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <p>
                        ¿Está seguro que desea devolver el libro
                        <strong id="tituloLibro"></strong>?
                    </p>

                    <input type="hidden" name="id" id="prestamoId" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-success">
                        Confirmar devolución
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>
<script>
    var modal = document.getElementById('modalDevolver');

    modal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;

        document.getElementById('prestamoId').value =
            button.getAttribute('data-id');

        document.getElementById('tituloLibro').textContent =
            button.getAttribute('data-libro');
    });
</script>


    

